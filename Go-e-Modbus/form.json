      "caption": "Seconds"
    },
    {
      "type": "Label",
      "label": "Interval, when current values will updating."
    },
    {
      "type": "IntervalBox",
      "name": "interval_current",
      "caption": "Seconds"
    },
    {
      "type": "CheckBox",
      "name": "daytime",
      "caption": "Update values on daytime only"
    },
    {
      "type": "Label",
      "label": "[ Logging ]"
    },
    {
      "type": "CheckBox",
      "name": "log",
      "caption": "enable logging"
    }
  ],
  "status": [
    {
      "code": 101,
      "icon": "inactive",
      "caption": "Please enter the ip address and the tcp port of your Go-e Charger device."
    },
    {
      "code": 102,
      "icon": "active",
      "caption": "Connection has been established."
    },
    {
      "code": 201,
      "icon": "error",
      "caption": "Error: Please enter the ip address and the tcp port of your Go-e Charger device."
    },
    {
      "code": 202,
      "icon": "error",
      "caption": "Error: Could not read data from your Go-e Charger device."
    }
  ],
  "actions": [
    {
      "type": "Button",
      "label": "Read Device",
      "onClick": "GoeModbus_UpdateDevice($id, true);"
